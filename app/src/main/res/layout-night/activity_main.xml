<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81FFFFFF"
    android:visibility="visible"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#81000000"
            android:backgroundTintMode="multiply"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="Чистая цена покупки %"
                android:textAlignment="textStart"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/CleanPrice"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/CleanPrice" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="НКД"
                android:textAlignment="textStart"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/NKD"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/CleanPrice" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="Всего выплат до погашения"
                android:textAlignment="textStart"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/AllPayments"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/AllPayments"
                app:layout_constraintVertical_bias="0.333" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="Количество выплат в год"
                android:textAlignment="textStart"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/PaymentsAtYear"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/PaymentsAtYear" />

            <TextView
                android:id="@+id/TaxIncomeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Налоговая доходность к погашению, %/год."
                android:textAlignment="textStart"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/SimpleIncomeLabel"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/SimpleIncomeLabel"
                app:layout_constraintTop_toBottomOf="@+id/SimpleIncome" />

            <TextView
                android:id="@+id/TaxIncome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="________"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/TaxIncomeLabel"
                app:layout_constraintEnd_toEndOf="@+id/SimpleIncome"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/SimpleIncome"
                app:layout_constraintTop_toTopOf="@+id/TaxIncomeLabel" />

            <TextView
                android:id="@+id/SimpleIncomeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Простая доходность к погашению, %/год."
                android:textAlignment="textStart"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/CurrentIncomeLabel"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/CurrentIncomeLabel"
                app:layout_constraintTop_toBottomOf="@+id/CurrentIncome" />

            <TextView
                android:id="@+id/SimpleIncome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="________"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/SimpleIncomeLabel"
                app:layout_constraintEnd_toEndOf="@+id/CurrentIncome"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/CurrentIncome"
                app:layout_constraintTop_toTopOf="@+id/SimpleIncomeLabel" />

            <TextView
                android:id="@+id/CurrentIncomeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Текущая доходность, %/год."
                android:textAlignment="textStart"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/CouponIncomeLabel"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/CouponIncomeLabel"
                app:layout_constraintTop_toBottomOf="@+id/CouponIncome" />

            <TextView
                android:id="@+id/CurrentIncome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="________"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/CurrentIncomeLabel"
                app:layout_constraintEnd_toEndOf="@+id/CouponIncome"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/CouponIncome"
                app:layout_constraintTop_toTopOf="@+id/CurrentIncomeLabel" />

            <TextView
                android:id="@+id/CouponIncome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="________"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/CouponIncomeLabel"
                app:layout_constraintEnd_toEndOf="@+id/DirtyPrice"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/DirtyPrice"
                app:layout_constraintTop_toTopOf="@+id/CouponIncomeLabel" />

            <TextView
                android:id="@+id/DirtyPriceLabel"
                android:layout_width="250dp"
                android:layout_height="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="76dp"
                android:text="Грязная цена покупки"
                android:textAlignment="textStart"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NKD" />

            <TextView
                android:id="@+id/DirtyPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="sans-serif"
                android:text="________"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/DirtyPriceLabel"
                app:layout_constraintTop_toTopOf="@+id/DirtyPriceLabel" />

            <EditText
                android:id="@+id/CleanPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|numberDecimal"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/AllPayments"
                app:layout_constraintStart_toStartOf="@+id/AllPayments"
                app:layout_constraintTop_toBottomOf="@+id/AllPayments" />

            <EditText
                android:id="@+id/NKD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|numberDecimal"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/CleanPrice"
                app:layout_constraintStart_toStartOf="@+id/CleanPrice"
                app:layout_constraintTop_toBottomOf="@+id/CleanPrice" />

            <EditText
                android:id="@+id/PaymentsAtYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|numberDecimal"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/CouponSize"
                app:layout_constraintStart_toStartOf="@+id/CouponSize"
                app:layout_constraintTop_toBottomOf="@+id/CouponSize" />

            <EditText
                android:id="@+id/AllPayments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number|numberDecimal"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/PaymentsAtYear"
                app:layout_constraintStart_toStartOf="@+id/PaymentsAtYear"
                app:layout_constraintTop_toBottomOf="@+id/PaymentsAtYear" />

            <EditText
                android:id="@+id/CouponSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:inputType="number|numberDecimal"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/CalculatedSellTime" />

            <EditText
                android:id="@+id/CalculatedSellTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="32dp"
                android:editable="false"
                android:ems="10"
                android:hint="Дней до погашения"
                android:inputType="none"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/StartDateButton" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="#3E9400"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Расчет облигаций"
                    android:textColor="#232323"
                    android:textSize="24sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.06"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.87" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="Дата покупки :"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NominalPrice" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="Дата продажи\n\/погашения:"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/EmitentRating"
                app:layout_constraintHorizontal_bias="0.46"
                app:layout_constraintStart_toStartOf="@+id/EmitentRating"
                app:layout_constraintTop_toBottomOf="@+id/NominalPrice" />

            <EditText
                android:id="@+id/NominalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Номинал"
                android:inputType="number|numberDecimal"
                android:textAlignment="center"
                android:textColorHint="?android:attr/textColorHint"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/OrgName"
                app:layout_constraintStart_toStartOf="@+id/OrgName"
                app:layout_constraintTop_toBottomOf="@+id/OrgName" />

            <EditText
                android:id="@+id/OrgName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:hint="Имя организации"
                android:inputType="text"
                android:textAlignment="center"
                android:textColorHint="?android:attr/textColorHint"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/EmitentRating"
                app:layout_constraintHorizontal_bias="0.17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

            <EditText
                android:id="@+id/EmitentRating"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint="Рейтинг эмитента"
                android:inputType="text"
                android:textAlignment="center"
                android:textColorHint="?android:attr/textColorHint"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/OrgName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/OrgName"
                app:layout_constraintTop_toTopOf="@+id/OrgName"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="Размер купона (ср.размер купона) р."
                android:textAlignment="textStart"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/CouponSize"
                app:layout_constraintEnd_toEndOf="@+id/StartDateButton"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/StartDateButton"
                app:layout_constraintTop_toTopOf="@+id/CouponSize" />

            <Button
                android:id="@+id/CalculationsButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="#4CAF50"
                android:backgroundTintMode="src_over"
                android:text="Рассчитать"
                android:textColor="#EDEDED"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/DirtyPriceLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NKD"
                app:layout_constraintVertical_bias="0.100000024"
                app:strokeColor="#000000" />

            <TextView
                android:id="@+id/CouponIncomeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Купонная доходность, %/год."
                android:textAlignment="textStart"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/DirtyPriceLabel"
                app:layout_constraintStart_toStartOf="@+id/DirtyPriceLabel"
                app:layout_constraintTop_toBottomOf="@+id/DirtyPrice" />

            <Button
                android:id="@+id/ResetButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_marginStart="32dp"
                android:backgroundTint="#BF4343"
                android:backgroundTintMode="src_over"
                android:text="Сброс"
                android:textColor="#EDEDED"
                app:layout_constraintBottom_toBottomOf="@+id/CalculationsButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/CalculationsButton" />

            <Button
                android:id="@+id/StartDateButton"
                style="?spinnerStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="ДД.ММ.ГГГГ"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@+id/OrgName"
                app:layout_constraintStart_toStartOf="@+id/OrgName"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:rippleColor="#FFFFFF"
                tools:visibility="visible" />

            <Button
                android:id="@+id/EndDateButton"
                style="?spinnerStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="ДД.ММ.ГГГГ"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="@+id/EmitentRating"
                app:layout_constraintStart_toStartOf="@+id/EmitentRating"
                app:layout_constraintTop_toTopOf="@+id/StartDateButton"
                app:rippleColor="#FFFFFF"
                tools:visibility="visible" />

            <CalendarView
                android:id="@+id/StartCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorForegroundInverse"
                android:backgroundTintMode="add"
                android:focusedMonthDateColor="#FFFFFF"
                android:selectedWeekBackgroundColor="#FFFFFF"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/StartDateButton"
                tools:visibility="gone" />

            <CalendarView
                android:id="@+id/EndCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorForegroundInverse"
                android:backgroundTintMode="add"
                android:focusedMonthDateColor="#FFFFFF"
                android:selectedWeekBackgroundColor="#FFFFFF"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/StartDateButton"
                tools:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>