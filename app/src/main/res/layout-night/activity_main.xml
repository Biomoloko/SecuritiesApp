<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81FFFFFF"
    android:visibility="visible"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="405dp"
        android:layout_height="780dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="1287dp"
                android:background="#9A0B0B0B"
                tools:context=".MainActivity">

                <TextView
                    android:id="@+id/TaxIncomeLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Налоговая доходность к погашению, %/год."
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/SimpleIncome"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/SimpleIncome"
                    app:layout_constraintTop_toBottomOf="@+id/SimpleIncome" />

                <TextView
                    android:id="@+id/TaxIncome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="________"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="@+id/TaxIncomeLabel"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/TaxIncomeLabel"
                    app:layout_constraintTop_toBottomOf="@+id/TaxIncomeLabel" />

                <TextView
                    android:id="@+id/SimpleIncomeLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Простая доходность к погашению, %/год."
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/CouponIncome"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/CouponIncome"
                    app:layout_constraintTop_toBottomOf="@+id/CurrentIncome" />

                <TextView
                    android:id="@+id/SimpleIncome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="________"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="@+id/CurrentIncomeLabel"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/CurrentIncomeLabel"
                    app:layout_constraintTop_toBottomOf="@+id/SimpleIncomeLabel" />

                <TextView
                    android:id="@+id/CurrentIncomeLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Текущая доходность, %/год."
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/CouponIncome"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/CouponIncome"
                    app:layout_constraintTop_toBottomOf="@+id/CouponIncome" />

                <TextView
                    android:id="@+id/CurrentIncome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="________"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="@+id/CurrentIncomeLabel"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/CurrentIncomeLabel"
                    app:layout_constraintTop_toBottomOf="@+id/CurrentIncomeLabel" />

                <TextView
                    android:id="@+id/CouponIncome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="________"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="@+id/CouponIncomeLabel"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/CouponIncomeLabel"
                    app:layout_constraintTop_toBottomOf="@+id/CouponIncomeLabel" />

                <TextView
                    android:id="@+id/DirtyPriceLabel"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginEnd="50dp"
                    android:text="Грязная цена покупки"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/NKD" />

                <TextView
                    android:id="@+id/DirtyPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:text="________"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="@+id/DirtyPriceLabel"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/DirtyPriceLabel"
                    app:layout_constraintTop_toBottomOf="@+id/DirtyPriceLabel" />

                <EditText
                    android:id="@+id/CleanPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Чистая цена покупки"
                    android:inputType="number|numberDecimal"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/AllPayments"
                    app:layout_constraintStart_toStartOf="@+id/AllPayments"
                    app:layout_constraintTop_toBottomOf="@+id/AllPayments" />

                <EditText
                    android:id="@+id/NKD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="НКД"
                    android:inputType="number|numberDecimal"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/CleanPrice"
                    app:layout_constraintStart_toStartOf="@+id/CleanPrice"
                    app:layout_constraintTop_toBottomOf="@+id/CleanPrice" />

                <EditText
                    android:id="@+id/PaymentsAtYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Количество выплат в год"
                    android:inputType="number|numberDecimal"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/CouponSize"
                    app:layout_constraintStart_toStartOf="@+id/CouponSize"
                    app:layout_constraintTop_toBottomOf="@+id/CouponSize" />

                <EditText
                    android:id="@+id/AllPayments"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Всего выплат до погашения"
                    android:inputType="number|numberDecimal"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/PaymentsAtYear"
                    app:layout_constraintStart_toStartOf="@+id/PaymentsAtYear"
                    app:layout_constraintTop_toBottomOf="@+id/PaymentsAtYear" />

                <EditText
                    android:id="@+id/CouponSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="50dp"
                    android:ems="10"
                    android:hint="Размер купона (ср.размер купона) р."
                    android:inputType="number|numberDecimal"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/CalculatedSellTime" />

                <EditText
                    android:id="@+id/CalculatedSellTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="32dp"
                    android:editable="false"
                    android:ems="10"
                    android:hint="Дней до погашения"
                    android:inputType="none"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/StartDateButton" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:background="#3E9400"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Securities Analizer"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.06"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.87" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:singleLine="false"
                    android:text="Дата продажи\n\/погашения:"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/EmitentRating"
                    app:layout_constraintStart_toStartOf="@+id/EmitentRating"
                    app:layout_constraintTop_toBottomOf="@+id/NominalPrice" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="32dp"
                    android:singleLine="true"
                    android:text="Дата покупки :"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/NominalPrice" />

                <EditText
                    android:id="@+id/NominalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ems="10"
                    android:hint="Номинал"
                    android:inputType="number|numberDecimal"
                    android:textColorHint="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/OrgName" />

                <EditText
                    android:id="@+id/OrgName"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="35dp"
                    android:ems="10"
                    android:hint="Имя организации"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColorHint="@color/white"
                    android:textSize="19dp"
                    app:layout_constraintEnd_toStartOf="@+id/EmitentRating"
                    app:layout_constraintHorizontal_bias="0.17"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

                <EditText
                    android:id="@+id/EmitentRating"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint="Рейтинг эмитента"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColorHint="@color/white"
                    android:textSize="19dp"
                    app:layout_constraintBottom_toBottomOf="@+id/OrgName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/OrgName"
                    app:layout_constraintTop_toTopOf="@+id/OrgName"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/CalculationsButton"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="258dp"
                    android:layout_height="60dp"
                    android:backgroundTint="#4CAF50"
                    android:backgroundTintMode="src_over"
                    android:text="Рассчитать"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/DirtyPriceLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/NKD"
                    app:layout_constraintVertical_bias="0.100000024"
                    app:strokeColor="#000000" />

                <TextView
                    android:id="@+id/CouponIncomeLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Купонная доходность, %/год."
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/DirtyPrice"
                    app:layout_constraintStart_toStartOf="@+id/DirtyPrice"
                    app:layout_constraintTop_toBottomOf="@+id/DirtyPrice" />

                <Button
                    android:id="@+id/ResetButton"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#BF4343"
                    android:backgroundTintMode="src_over"
                    android:text="Сброс"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toTopOf="@+id/DirtyPriceLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/CalculationsButton"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/StartDateButton"
                    style="?spinnerStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#0E0101"
                    android:text="ДД.ММ.ГГГГ"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@+id/OrgName"
                    app:layout_constraintStart_toStartOf="@+id/OrgName"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    app:rippleColor="#150B0B"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/EndDateButton"
                    style="?spinnerStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0E0101"
                    android:text="ДД.ММ.ГГГГ"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@+id/EmitentRating"
                    app:layout_constraintStart_toStartOf="@+id/EmitentRating"
                    app:layout_constraintTop_toTopOf="@+id/StartDateButton"
                    app:rippleColor="#150B0B"
                    tools:visibility="visible" />

                <CalendarView
                    android:id="@+id/StartCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:backgroundTintMode="add"
                    android:selectedWeekBackgroundColor="#AEFF83"
                    android:unfocusedMonthDateColor="#9CFF79"
                    android:visibility="visible"
                    android:weekNumberColor="#A5FB84"
                    android:weekSeparatorLineColor="#B6FF82"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/StartDateButton"
                    tools:visibility="gone" />

                <CalendarView
                    android:id="@+id/EndCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:backgroundTintMode="add"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/StartDateButton"
                    tools:visibility="gone" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>